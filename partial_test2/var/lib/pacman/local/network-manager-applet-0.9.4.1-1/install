pkgname=network-manager-applet

post_install() {
  usr/sbin/gconfpkg --install ${pkgname}
  gtk-update-icon-cache -f -q -t /usr/share/icons/hicolor
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  usr/sbin/gconfpkg --uninstall ${pkgname}
}

post_remove() {
  gtk-update-icon-cache -f -q -t /usr/share/icons/hicolor
}
