#!/bin/sh

prefix="/usr"
exec_prefix="${prefix}"
VERSION="1.6.16"
CFLAGS="-Wwrite-strings -W -Wall -march=armv5te -O2 -pipe -fno-strict-volatile-bitfields -fstack-protector --param=ssp-buffer-size=4 -D_FORTIFY_SOURCE=2 -D_GNU_SOURCE"
CPPFLAGS="  "
LDFLAGS="  "
LIBS="  -lcrypto -ldl"
LIBDIR="${exec_prefix}/lib"
INCLUDEDIR="${prefix}/include"

for arg in $@
do
    if [ $arg = "--cflags" ]
    then
        echo "-I${INCLUDEDIR}"
    fi
    if [ $arg = "--libs" ]
    then
        echo "${LDFLAGS} -L${LIBDIR} ${LIBS} -lldns"
    fi
    if [ $arg = "-h" ] || [ $arg = "--help" ]
    then
        echo "Usage: $0 [--cflags] [--libs] [--version]"
    fi
    if [ $arg = "--version" ]
    then
        echo "${VERSION}"
    fi
done
